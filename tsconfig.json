{
  "compilerOptions": {
    "module": "CommonJS",
    "strict": true,
    "noImplicitReturns": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "sourceMap": true,
    "declaration": true,
    "target": "es2015",
    "lib": ["es2017", "dom"],
    "outDir": "build",
    "rootDir": "./src",
    "baseUrl": ".",
    "paths": {
      "*": ["types/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules/*"]
}
